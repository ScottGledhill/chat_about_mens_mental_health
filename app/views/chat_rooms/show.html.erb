<h2>Talk About <%= @chat_room.title %></h2>

<div id="wrapper">
  <div id="menu">
    <p class="welcome">Welcome, <%= current_user.username %> <b></b></p>
    <p class="logout"><a id="exit" <%= link_to 'Exit Room', chat_rooms_path %></p>
      <div style="clear:both"></div>
    </div>


<div id="chatbox">
<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
  <%= render @chat_room.messages %>
</div>
</div>
  <div>
     <%= form_for @message, url: '#' do |f| %>
       <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
       <div class="form-group">
         <%= f.text_area :body, class: 'form-control' %>
         <%= f.submit "Post", class: 'submit' %>
       </div>
     <% end %>
</div>
